<% layout('layouts/boilerplate') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <h2>All Card Sets</h2>
        </div>
    </div>
    <% for (let cardSet of cardSets) {%>
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= cardSet.title %>
                    </h5>
                    <p class="card-text">
                        <%= cardSet.description %>
                    </p>
                    <a class="btn btn-info" href="/cardSets/<%= cardSet._id %>">View Set</a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>

<script>
    const cardSets = <%- JSON.stringify(cardSets) %>
</script>